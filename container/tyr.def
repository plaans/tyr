Bootstrap: docker
From: python:3.12-slim

%files
    libs/* libs/
    requirements/* requirements/
    src/* src/
    tests/* tests/
    pyproject.toml

%post
    # Remove unnecessary configuration files
    ls -d src/tyr/configuration/* | grep yaml | grep -v example | xargs -r rm

    # Install Apptainer (Apptainer-ception !)
    apt update && apt install -y wget
    wget https://github.com/apptainer/apptainer/releases/download/v1.3.0/apptainer_1.3.0_amd64.deb
    apt install -y ./apptainer_1.3.0_amd64.deb

    # Install Rust
    apt install -y build-essential curl
    curl https://sh.rustup.rs | sh -s -- --no-modify-path -y
    . "$HOME/.cargo/env"

    # Compile Aries
    cargo build --release --bin up-server --manifest-path libs/aries/Cargo.toml
    cp libs/aries/target/release/up-server libs/aries/planning/unified/plugin/up_aries/bin/up-aries_linux_amd64
    cargo clean --manifest-path libs/aries/Cargo.toml

    # Install Python dependencies
    apt install -y git
    pip install -r requirements/dev.txt

%runscript
    exec python -m tyr "$@"

%test
    python -m pytest tests/

%labels
    Author Roland Godet <rgodet@laas.fr>